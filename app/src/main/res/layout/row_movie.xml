<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/view_border"
    android:layout_margin="@dimen/widthMinSmall">

    <ImageView
        android:id="@+id/id_poster_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/marginSmall"
        android:src="@drawable/image_border"/>


    <TextView
        android:id="@+id/id_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottomPadding"
        android:layout_gravity="center|bottom"

        android:background="#1A000000"
        android:layout_margin="@dimen/marginSmall"
        android:padding="@dimen/marginSmall"
        android:textAllCaps="true"
        android:textColor="@color/startColor"
        android:textSize="@dimen/normalText" />

    <ImageView
        android:id="@+id/id_favorite_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="@drawable/favorite_button"
        />

</FrameLayout>